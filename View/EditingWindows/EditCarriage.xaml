<Window x:Class="AdminPanel.View.EditingWindows.EditCarriage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanel.View.EditingWindows"
        mc:Ignorable="d"
        Title="EditCarriage" 
        WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True" 
        WindowStyle="None"
        Background="#FF005055" 
        Width="390"
        Height="250"
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Rectangle 
                x:Name="MoveRectangle" 
                Fill="#202022" 
                Height="32" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Stretch"
                MouseDown="MoveRectangle_MouseDown"/>

        <TextBlock
            FontSize="16"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Редактирование вагона"
            Margin="5"
            Foreground="Snow"
            MouseDown="TextBlock_MouseDown"/>

        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <Button x:Name="CloseButton"
                    Style="{StaticResource closeButton}"
                    Content="X" 
                    Width="32" Height="32"
                    Click="CloseButton_Click"
                    Foreground="snow"/>
        </StackPanel>

        <Border
            Background="#00BBC9"
            CornerRadius="15"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Margin="10,50,10,0">
            <StackPanel
                    Margin="30,5,0,10"
                    Orientation="Horizontal">
                <StackPanel>
                    <TextBlock
                            FontSize="16"
                            Text="Номер поезда"
                            HorizontalAlignment="Center"/>
                    <ComboBox
                            FontSize="16"
                            MinWidth="150"
                            x:Name="TrainNumberComboBox"/>
                    <TextBlock
                            FontSize="16"
                            Text="Тип вагона"
                            HorizontalAlignment="Center"/>
                    <ComboBox
                            FontSize="16"
                            MinWidth="150"
                            x:Name="CarriageTypeComboBox">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                        FontSize="16"
                                        Text="{Binding Path=Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                </StackPanel>
                <StackPanel
                        Margin="8,0,0,0">
                    <TextBlock
                            FontSize="16"
                            Text="Номер вагона"
                            HorizontalAlignment="Center"/>
                    <TextBox
                            FontSize="16"
                            MinWidth="150"
                            MaxWidth="150"
                            MaxLength="11"
                            x:Name="CarriageNumberTextBox"
                            PreviewTextInput="CarriageNumberTextBox_PreviewTextInput"/>
                    <Button
                            x:Name="EditButton"
                            Margin="0,25,0,0"
                            Style="{StaticResource SimpleButton}"
                            VerticalAlignment="Bottom"
                            Content="Изменить"
                            MinHeight="30"
                            Click="EditButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
